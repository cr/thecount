doctype html
html
  head
    title #{title} - TheCountStore

    link(rel="shortcut icon",href="/images/thecount.jpg",type="image/x-icon")
    link(rel="stylesheet",href="//cdn.jsdelivr.net/bootstrap/3.1.1/css/bootstrap.css")
    link(rel="stylesheet",href="/stylesheets/barchart.css")

  body
    div(class='navbar navbar-inverse navbar-fixed-top')
      .container
        .navbar-header
          button(type='button', class='navbar-toggle', data-toggle='collapse', data-target='.navbar-collapse')
            span(class='sr-only')
            span(class='icon-bar')
            span(class='icon-bar')
            span(class='icon-bar')
          a(class='navbar-brand', href="#") TheCount
        div(class='collapse navbar-collapse')
          ul(class='nav navbar-nav')
            each menuItem in graphsMenu
              li
                a(href="/#{menuItem.kind}/#{menuItem.routeFragment}") #{menuItem.title}

    script(src="//cdn.jsdelivr.net/jquery/1.10.2/jquery-1.10.2.js")
    script(src="//cdn.jsdelivr.net/bootstrap/3.1.1/js/bootstrap.min.js")
    script(src="//cdn.jsdelivr.net/d3js/3.4.6/d3.min.js")
    script(src="/scripts/installHelpers.js")    
    script(src="/scripts/d3Helpers.js")    

    .container
      div(style='margin-top: 60px')
      .main-content
        block content
      .sidebar
        block sidebar
